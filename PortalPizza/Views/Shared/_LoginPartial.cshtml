@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Twój login: " + User.Identity.GetUserName() , "ChangePassword", "Manage")
    </li>
    <li>
        <a href="@Url.Action("Index","Koszyk")">
            <span class="glyphicon glyphicon-shopping-cart" style="margin-right:5px;"></span>
            <div id="CenaKoszykNaglowek" style="float:right;">@Html.Action("PobierzIloscKoszyka", "Koszyk")zł</div>
        </a>
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">  <span class="glyphicon glyphicon-log-out"></span> </a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zarejestruj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Zaloguj", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
